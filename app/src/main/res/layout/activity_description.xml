<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="8dp"
tools:context=".ui.description.DescriptionActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_destination1"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/mysore_palace" />

    <TextView
        android:id="@+id/tv_dest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/d_title1"
        android:textSize="22sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_destionation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/destination1"
        android:padding="16dp"/>

    <Button
        android:id="@+id/bu_dest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />


    <ImageView
        android:id="@+id/img_destination2"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/kiskindha_bonsai" />

    <TextView
        android:id="@+id/tv_dest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/d_title2"
        android:textSize="22sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_destionation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/destination2"

        android:padding="16dp"/>

    <Button
        android:id="@+id/bu_dest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <ImageView
        android:id="@+id/img_destination3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
         app:srcCompat="@drawable/kiskindha_bonsai" />

    <TextView
        android:id="@+id/tv_dest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/d_title3"
        android:textSize="22sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_destionation3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/destionation3" />

    <Button
        android:id="@+id/bu_des3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <Button
        android:id="@+id/bu_des4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Know More Destinations in Mysore"
        android:textColor="#000000"
        app:backgroundTint="#A985E8" />


</LinearLayout>

</ScrollView>


