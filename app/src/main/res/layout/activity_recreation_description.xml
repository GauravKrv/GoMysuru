<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="8dp"
tools:context=".ui.description.RecreationDescription">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_rec1"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/yoga" />

    <TextView
        android:id="@+id/tv_rec1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/yoga"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_rec1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <ImageView
        android:id="@+id/img_rec2"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/trekking" />

    <TextView
        android:id="@+id/tv_rec2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/trekking"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_rec2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <ImageView
        android:id="@+id/img_rec3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/outdoor_games" />

    <TextView
        android:id="@+id/tv_rec3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/outdoor_games"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_rec3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />
    <ImageView
        android:id="@+id/img_rec4"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/skydiving" />

    <TextView
        android:id="@+id/tv_rec4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/skydiving"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_rec4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <ImageView
        android:id="@+id/img_rec5"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/boating" />

    <TextView
        android:id="@+id/tv_rec5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/boating"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_rec5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <Button
        android:id="@+id/bu_rec6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Know More Recreations in Mysore"
        android:textColor="#000000"
        app:backgroundTint="#A985E8" />


</LinearLayout>

</ScrollView>
