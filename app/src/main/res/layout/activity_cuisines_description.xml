<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".ui.description.CuisinesDescription"
android:background="#ffffff">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#000"
        android:padding="4dp"
        android:text="Mysore Pak"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mysore_pak" />
    <TextView
        android:id="@+id/tv_destionation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cuisine1"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="4dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:text="Vairamundi"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mysore_masala_dosa" />
    <TextView
        android:id="@+id/tv_destionation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/cuisine2"

        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="4dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:text="Pulao Hanumanthamess"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pulao_hanumanthamess"  />

    <TextView
        android:id="@+id/tv_destionation3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:padding="12dp"
        android:text="@string/cuisine3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="4dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:text="Filter Coffee"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/filtercoffee" />

    <TextView
        android:id="@+id/tv_destionation4"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:padding="12dp"
        android:text="@string/cuisine4" />
</LinearLayout>
</ScrollView>



