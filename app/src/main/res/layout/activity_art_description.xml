<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".ui.description.ArtDescription"
android:background="#ffffff">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#000"
        android:padding="4dp"
        android:text="Tallad"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/tallad" />
    <TextView
        android:id="@+id/tv_destionation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/art1"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="4dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:text="Chamarajendra Art Gallery"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/chamarajendra_art_gallery" />
    <TextView
        android:id="@+id/tv_destionation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/art2"

        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="4dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:text="Wax Meuseum"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/wax_meauseum"  />

    <TextView
        android:id="@+id/tv_destionation3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:padding="12dp"
        android:text="@string/art3" />


</LinearLayout>
</ScrollView>





