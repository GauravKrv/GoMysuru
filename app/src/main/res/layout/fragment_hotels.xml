<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:padding="8dp"

tools:context=".ui.hotels.HotelsFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<ImageView
    android:id="@+id/img_hotel1"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:scaleType="centerCrop"

    app:srcCompat="@drawable/royal_orchid_metropole" />

<TextView
    android:id="@+id/tv_hotel1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:textColor="#000"
    android:textAlignment="center"
    android:text="@string/hotel1"
    android:textSize="22sp"
    android:textStyle="italic" />

    <Button
        android:id="@+id/bu_hotel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <ImageView
        android:id="@+id/img_hotel2"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/quoram" />

    <TextView
        android:id="@+id/tv_hotel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/hotel2"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_hotel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />

    <ImageView
        android:id="@+id/img_hotel3"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/lalita" />

    <TextView
        android:id="@+id/tv_hotel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/hotel3"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_hotel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:text="Click to know more" />
    <ImageView
        android:id="@+id/img_hotel4"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/le_ruchi_prince" />

    <TextView
        android:id="@+id/tv_hotel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="@string/hotel4"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bu_hotel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bu_knowmore"
        android:layout_marginBottom="15dp"
        android:text="Click to know more" />

        <Button
            android:id="@+id/bu_hotel9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Check More Hotels"
            android:drawableLeft="@drawable/ic_bu_knowmore"
            android:textColor="#000000"
            app:backgroundTint="#A985E8" />
    </LinearLayout>

</ScrollView>
